mixin formElement
    form.form
        div.form__inner
            div.form__input-block
                input.form__input.form__username(placeholder="Ваше имя")
                span.input-warning поле обязательно*
            div.form__input-block
                input.form__input.form__email(placeholder="Email" type='email')
                span.input-warning поле обязательно*
            button.form__btn.btn(type="submit") Получить консультацию
            p.form__message Ваша заявка успешно отправлена!

mixin pointListItems(values)
  each value in values
      li.point-list__item
          img(src=require('../assets/images/icons/point.svg'))
          span= value


mixin cubeListItems(values)
  each value in values
      li.cube-list__item
          img(src=require('../assets/images/icons/small-cube.svg'))
          span= value

mixin breadcrumb(values)
    div.breadcrumb
      each value in values
          if value === values[0]
              a.breadcrumb__item(href='./')= value
                  if value !== values[values.length - 1]
                      span /
          else
              a.breadcrumb__item= value
                  if value !== values[values.length - 1]
                      span /



